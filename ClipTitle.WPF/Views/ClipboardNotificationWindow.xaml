<Window x:Class="ClipTitle.Views.ClipboardNotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ClipTitle"
        Height="180" 
        Width="400"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        WindowStartupLocation="Manual"
        Loaded="Window_Loaded">
    
    <Border Background="#2196F3" 
            CornerRadius="8"
            BorderBrush="#1976D2"
            BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect Color="Black" Opacity="0.3" BlurRadius="10" ShadowDepth="3"/>
        </Border.Effect>
        
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="ðŸ“‹ Clipboard Captured" 
                              FontWeight="Bold" 
                              FontSize="16"
                              Foreground="White"/>
                    <TextBlock x:Name="TitleText" 
                              FontSize="14"
                              Foreground="#E3F2FD"
                              Margin="0,3,0,0"/>
                </StackPanel>
                
                <Button Grid.Column="1" 
                       Content="âœ•" 
                       Background="Transparent"
                       BorderThickness="0"
                       Foreground="White"
                       FontSize="16"
                       Cursor="Hand"
                       Click="CloseButton_Click"/>
            </Grid>
            
            <!-- Content Preview -->
            <Border Grid.Row="1" 
                   Background="#1976D2"
                   CornerRadius="4"
                   Margin="0,10">
                <TextBlock x:Name="PreviewText" 
                          Foreground="White"
                          Padding="8"
                          TextWrapping="Wrap"
                          MaxHeight="60"/>
            </Border>
            
            <!-- Action Buttons -->
            <StackPanel Grid.Row="2" 
                       Orientation="Horizontal"
                       HorizontalAlignment="Right">
                <Button x:Name="AppendButton" 
                       Content="Append to Last" 
                       Margin="0,0,10,0"
                       Padding="15,8"
                       Background="White"
                       Foreground="#2196F3"
                       BorderThickness="0"
                       Cursor="Hand"
                       Click="AppendButton_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </Button.Resources>
                </Button>
                
                <Button x:Name="NewFileButton" 
                       Content="Create New File" 
                       Padding="15,8"
                       Background="#4CAF50"
                       Foreground="White"
                       BorderThickness="0"
                       Cursor="Hand"
                       Click="NewFileButton_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>