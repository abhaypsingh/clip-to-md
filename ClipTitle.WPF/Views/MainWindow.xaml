<Window x:Class="ClipTitle.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ClipTitle Settings" 
        Height="650" 
        Width="800"
        WindowStartupLocation="CenterScreen"
        Closing="Window_Closing">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2196F3" Padding="20">
            <StackPanel>
                <TextBlock Text="ClipTitle" FontSize="28" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="Intelligent Clipboard Manager with AI-Powered Titles" 
                          FontSize="14" Foreground="#E3F2FD" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Tab Control -->
        <TabControl Grid.Row="1" Margin="10">
            <TabItem Header="General Settings">
                <ScrollViewer Padding="20">
                    <StackPanel>
                        <!-- Save Directory -->
                        <GroupBox Header="Save Location" Margin="0,0,0,15">
                            <Grid Margin="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="SaveDirectoryTextBox" 
                                        Grid.Column="0" 
                                        IsReadOnly="True"
                                        VerticalAlignment="Center"/>
                                <Button Grid.Column="1" 
                                       Content="Browse..." 
                                       Margin="10,0,0,0"
                                       Padding="10,5"
                                       Click="BrowseFolder_Click"/>
                            </Grid>
                        </GroupBox>
                        
                        <!-- Capture Behavior -->
                        <GroupBox Header="Capture Behavior" Margin="0,0,0,15">
                            <StackPanel Margin="10">
                                <RadioButton x:Name="AskEveryTimeRadio" 
                                           Content="Ask every time (show notification with Append/New buttons)"
                                           IsChecked="True"
                                           Margin="0,5"/>
                                <RadioButton x:Name="AutoAppendRadio" 
                                           Content="Auto-append mode (silent - no notifications)"
                                           Margin="0,5"/>
                                <CheckBox x:Name="RunAtStartupCheckBox" 
                                        Content="Start with Windows"
                                        Margin="0,10,0,5"/>
                            </StackPanel>
                        </GroupBox>
                        
                        <!-- Filtering -->
                        <GroupBox Header="Filtering Options" Margin="0,0,0,15">
                            <Grid Margin="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <Label Grid.Row="0" Grid.Column="0" Content="Minimum Length:"/>
                                <TextBox x:Name="MinLengthTextBox" 
                                        Grid.Row="0" Grid.Column="1" 
                                        Text="5"
                                        Margin="5"/>
                                
                                <Label Grid.Row="1" Grid.Column="0" Content="Ignore Patterns:"/>
                                <TextBox x:Name="IgnorePatternsTextBox" 
                                        Grid.Row="1" Grid.Column="1" 
                                        Text="^\d{6}$"
                                        ToolTip="Regex patterns, one per line"
                                        Margin="5"/>
                            </Grid>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <TabItem Header="AI Settings">
                <ScrollViewer Padding="20">
                    <StackPanel>
                        <!-- Ollama Configuration -->
                        <GroupBox Header="Ollama Configuration" Margin="0,0,0,15">
                            <Grid Margin="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" MinWidth="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <CheckBox x:Name="OllamaEnabledCheckBox"
                                         Grid.Row="0" Grid.Column="1"
                                         Content="Enable Ollama for title generation"
                                         IsChecked="False"
                                         Margin="5"/>
                                
                                <Label Grid.Row="1" Grid.Column="0" Content="Base URL:"/>
                                <TextBox x:Name="OllamaUrlTextBox" 
                                        Grid.Row="1" Grid.Column="1" 
                                        Text="http://localhost:11434"
                                        Margin="5"/>
                                
                                <Label Grid.Row="2" Grid.Column="0" Content="Model:"/>
                                <TextBox x:Name="OllamaModelTextBox" 
                                        Grid.Row="2" Grid.Column="1" 
                                        Text="llama3:8b"
                                        Margin="5"/>
                                
                                <Label Grid.Row="3" Grid.Column="0" Content="Timeout (ms):"/>
                                <TextBox x:Name="OllamaTimeoutTextBox" 
                                        Grid.Row="3" Grid.Column="1" 
                                        Text="5000"
                                        Margin="5"/>
                                
                                <StackPanel Grid.Row="4" Grid.Column="1" 
                                          Orientation="Horizontal" 
                                          Margin="5,10">
                                    <Button Content="Test Connection" 
                                           Padding="10,5"
                                           Click="TestOllama_Click"/>
                                    <TextBlock x:Name="TestResultText" 
                                             VerticalAlignment="Center"
                                             Margin="10,0,0,0"/>
                                </StackPanel>
                            </Grid>
                        </GroupBox>
                        
                        <!-- Title Generation -->
                        <GroupBox Header="Title Generation" Margin="0,0,0,15">
                            <StackPanel Margin="10">
                                <Label Content="Custom Prompt Template (optional):"/>
                                <TextBox x:Name="PromptTemplateTextBox" 
                                        TextWrapping="Wrap"
                                        AcceptsReturn="True"
                                        Height="100"
                                        Margin="5"
                                        Text="Generate a concise title (3-8 words) for: {content}"/>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <TabItem Header="About">
                <ScrollViewer Padding="20">
                    <StackPanel>
                        <TextBlock Text="ClipTitle" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>
                        <TextBlock Text="Version 1.0.0" FontSize="16" Margin="0,0,0,20"/>
                        
                        <TextBlock TextWrapping="Wrap" Margin="0,0,0,15">
                            <Run Text="ClipTitle is an intelligent clipboard manager that automatically captures, converts, and organizes your clipboard content with AI-generated titles."/>
                        </TextBlock>
                        
                        <TextBlock Text="Features:" FontWeight="Bold" Margin="0,10,0,5"/>
                        <TextBlock TextWrapping="Wrap" Margin="20,0,0,15">
                            • Automatic clipboard monitoring
                            <LineBreak/>
                            • HTML to Markdown conversion
                            <LineBreak/>
                            • AI-powered title generation using local Ollama
                            <LineBreak/>
                            • Smart append or new file creation
                            <LineBreak/>
                            • System tray integration
                            <LineBreak/>
                            • Privacy-focused: all data stays local
                        </TextBlock>
                        
                        <TextBlock Text="Keyboard Shortcuts:" FontWeight="Bold" Margin="0,10,0,5"/>
                        <TextBlock Margin="20,0,0,15">
                            • Win+Shift+V: Show last capture
                            <LineBreak/>
                            • Win+Shift+C: Toggle pause
                        </TextBlock>
                        
                        <Button Content="Open GitHub Repository" 
                               HorizontalAlignment="Left"
                               Padding="10,5"
                               Margin="0,10"
                               Click="OpenGitHub_Click"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
        
        <!-- Status Bar -->
        <StatusBar Grid.Row="1" VerticalAlignment="Bottom">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Text="Ready"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock x:Name="CaptureCountText" Text="Captures today: 0"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>